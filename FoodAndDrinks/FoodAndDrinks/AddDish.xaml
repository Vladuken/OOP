<Window x:Class="FoodAndDrinks.AddDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodAndDrinks"
        mc:Ignorable="d"
        Title="AddDish" Height="450" Width="488.35">
    <Grid>
        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="23" Margin="225,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbCalories" HorizontalAlignment="Left" Height="23" Margin="225,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="147,18,0,0" VerticalAlignment="Top"/>
        <Label Content="Calories" HorizontalAlignment="Left" Margin="147,56,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbType" HorizontalAlignment="Left" Margin="225,99,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="147,96,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="225,185,0,0" VerticalAlignment="Top" Width="120" Click="btnSave_Click"/>

    </Grid>
</Window>
